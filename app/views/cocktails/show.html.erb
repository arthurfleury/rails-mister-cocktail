<h1>Details of your cocktail</h1> <%= link_to "+ Add a dose", new_cocktail_dose_path(@cocktail) %>



<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

  <% @doses.each do |dose| %>
  <p><%= dose.description  %> <%= dose.ingredient.name%>
  <%= link_to "Delete this doses", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %> </p>
  <p><% end %></p>
</div>



