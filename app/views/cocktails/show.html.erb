<h1>Details of your cocktail</h1>



<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @doses.each do |dose| %>
  <p><%= dose.description  %> <%= dose.ingredient.name%>
  <%= link_to "Delete this dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %> </p>
  <p><% end %></p>
</div>


<%= link_to "+ Add a dose", new_cocktail_dose_path(@cocktail) %>

